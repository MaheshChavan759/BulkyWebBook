@model Product


<form method="post">
    <input asp-for="Id" hidden />
    <div class="row pb-2">
        <h2 class="text-primary">Delete Product </h2>
        <hr />
    </div>
    <div class="mb-3 row">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3 row">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="mb-3 row">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="mb-3 row">
        <label asp-for="ListPrise"></label>
        <input asp-for="ListPrise" class="form-control" />
    </div>
    <div class="mb-3 row">
        <label asp-for="Prise50"></label>
        <input asp-for="Prise50" class="form-control" />
    </div>
    <div class="mb-3 row">
        <label asp-for="Prise100"></label>
        <input asp-for="Prise100" class="form-control" />
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary form-control border">
                Delete Category
            </button>
        </div>
        <div class="col-6">

            <a asp-controller="Product" asp-action="Index"
               class="btn btn-secondary form-control border">
                Back To List
            </a>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}